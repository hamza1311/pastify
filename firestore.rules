rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
        match /{document=**} {
            allow read, write: if false;
        }
        match /pastes/{paste_id} {
            allow get;
            allow create;
            allow update: if true;
            allow delete: if request.auth.uid == resource.data.createdBy;
        }
    }
}
